@{
    Layout = "_LayoutAdmin";
    List<User> users = (List<User>)ViewData["users"];
}
<h3>Список пользователей</h3>
<table class="table">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Почта</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in users)
        {
        <tr>
            <td>@item.Surname</td>
            <td>@item.Name</td>
            <td>@item.FatherName</td>
            <td>@item.Email</td>
            <td><a asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a></td>
        </tr>
        }
    </tbody>
</table>